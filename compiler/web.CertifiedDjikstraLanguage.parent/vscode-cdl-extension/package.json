{
    "name": "xtext-vscode-extension",
    "displayName": "Xtext VS Code extension",
    "description": "An extension to show the cdl language working in VS Code",
    "version": "0.0.1",
    "publisher": "xtext",
    "license": "EPL-1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/svenefftinge/xtext-lsp-workshop"
    },
    "bugs": {
        "url": "https://github.com/svenefftinge/xtext-lsp-workshop/issues"
    },
    "engines": {
        "vscode": "^1.18.x"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:cdl"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "cdl",
                "aliases": [
                    "cdl"
                ],
                "extensions": [
                    ".cdl"
                ],
                "configuration": "./cdl.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cdl",
                "scopeName": "text.cdl",
                "path": "./syntaxes/cdl.tmLanguage"
            }
        ]
    },
    "devDependencies": {
        "typescript": "^3.0.0",
        "vscode": "^1.1.0",
        "@types/node": "^7.0.13"
    },
    "dependencies": {
        "vsce": "^1.77.0",
        "vscode-jsonrpc": "^3.2.0",
        "vscode-languageclient": "^3.2.0",
        "vscode-languageserver-types": "^3.2.0"
    },
    "scripts": {
        "prepublish": "node ./node_modules/vscode/bin/install && tsc -p ./src",
        "compile": "tsc -p ./src",
        "watch": "tsc -w -p ./src",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
